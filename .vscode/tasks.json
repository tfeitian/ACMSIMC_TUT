{
  "tasks": [
    {
      "type": "shell",
      "label": "gcc build exe",
      "command": "C:/MinGW/bin/gcc.exe",
      "args": [
        "-g",
        "main.c",
        "observer.c",
        "controller.c",
        "-o",
        "${workspaceRoot}\\main.exe"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "run",
      "command": "main.exe"
    }
  ],
  "version": "2.0.0"
}
