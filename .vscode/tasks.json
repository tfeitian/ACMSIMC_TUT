{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "buildexe",
      "command": "C:/MinGW/bin/gcc.exe",
      "args": [
        "-g",
        "main.c",
        "observer.c",
        "controller.c",
        "-o",
        "${workspaceRoot}\\main.exe"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "run",
      "command": "${workspaceRoot}\\main.exe",
      "options": {
        "cwd": "${workspaceRoot}"
      }
    },
    {
      "label": "Build and Run",
      "dependsOn": ["buildexe", "run"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
